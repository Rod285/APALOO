package Pilas3;

public class Pila {
	private int[] stk;
	private int tope =-1;
	
	Pila() {
		stk = new int[3];
	}
	
	Pila(int tampila) {
		stk = new int[tampila];
	}
	
	void push(int num) {
		
		if(tope == (stk.length)-1) {
			System.out.println("La Pila está llena");
		} else {
			tope++;
			stk[tope] = num;
		}
	}
	
	Integer pop() {
		Integer dato = null;
		if(tope == -1) {
			System.out.println("La Pila está vacia");
		} else {
			dato = stk[tope];
			tope--;
		}
		return dato;
	}
	
	void muestraDatos() {
		if(tope == -1) {
			System.out.println("La pila está vacia");
		}else {
			System.out.println("Los valores en la pila son: ");
			for(int i = 0; i<=tope;i++)
				System.out.println(stk[i]);
		}
	}
	
/*	int getTamArr() {
		return stk.length;
	}
	
	int getNumDatos() {
		return tope;
	}
*/
}
