		Scanner sc = new Scanner(System.in);
		int op;
		
		Pila p1 = new Pila();
		Menu m1 = new Menu();
		Operaciones ope = new Operaciones();
		
		do {
			
			op = m1.muestraMenu();
		
			switch (op) {
				case 1: p1 = new Pila(ope.asignaTam());
			            break;
				case 2: p1.push(ope.introduceValor());
						break;            
			    case 3: System.out.println(p1.pop());
			    		break;
			    case 4: System.out.println("Fin del programa");
			            break;
			    default: System.out.println("Opción no valida");
			}
			
		/*	switch (op) {
