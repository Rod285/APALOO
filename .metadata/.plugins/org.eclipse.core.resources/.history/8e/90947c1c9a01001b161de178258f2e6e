package Pilas3;

import java.util.Scanner;

public class Principal {
	
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int op;
		int tamarr;
		Pila p1 = new Pila();
		Menu m1 = new Menu();
		
		do {
			/*System.out.println("Seleccione una opción");
			System.out.println("1.- Tamaño de Pila (El tamaño por defecto es 3)");
			System.out.println("2.- Push");
			System.out.println("3.- Pop");
			System.out.println("4.- Salir");
			op = sc.nextInt();*/
			
			op = m1.muestraMenu();
		
			switch (op) {
				case 1: System.out.println("Introduzca tamaño de pila");
				        tamarr = sc.nextInt();
			            p1 = new Pila(tamarr);
			            break;
				case 2: System.out.println("Introduzca dato a la pila");
			            p1.push(sc.nextInt());
			            break;
			    case 3: //int x = p1.pop();
			    		//if (x != -1) {
			    			System.out.println(p1.pop());
			    		//}
			    		break;
			    case 4: System.out.println("Fin del programa");
			            break;
			    default: System.out.println("Opción no valida");
			}
		
		}while(op != 4);
		
		sc.close();
		
	}

}
