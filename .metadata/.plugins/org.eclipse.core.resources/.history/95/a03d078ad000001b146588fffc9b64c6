package Pilas2;

public class Pila {
	private int[] stk;
	private int tope =-1;
	
	Pila() {
		stk = new int[10];
	}
	
	Pila(int tamarr) {
		stk = new int[tamarr];
	}
	
	int getTamArr() {
		return stk.length;
	}
	
	void push(int num) {
		
		if(tope == (stk.length)) {
			System.out.println("La Pila está llena");
		} else {
			tope++;
			stk[tope] = num;
		}
	}
	
	int pop() {
		int dato = -1;
		if(tope == -1) {
			System.out.println("La Pila está vacia");
		} else {
			dato = stk[tope];
			tope--;
		}
		return dato;
	}
}
