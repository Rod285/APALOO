package Pilas3;

import java.util.Scanner;

public class Principal {
	
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int op;
		int tamarr;
		Pila p1 = new Pila();
		
		do {
			System.out.println("Seleccione una opción");
			System.out.println("1.- Tamaño de Pila");
			System.out.println("2.- Push");
			System.out.println("3.- Pop");
			System.out.println("4.- Salir");
			op = sc.nextInt();
		
		
			switch (op) {
				case 1: System.out.println("Introduzca tamaño de pila");
				        tamarr = sc.nextInt();
			            p1 = new Pila(tamarr);
			            break;
				case 2: System.out.println("Introduzca dato a la pila");
			            p1.push(sc.nextInt());
			            break;
			    case 3: System.out.println(p1.pop());
			    		break;
			}
		
		}while(op != 4);
		
		//Pila p1 = new Pila(20);
		
		//for(int i = 0; i<p1.getTamArr();i++)
		//	p1.push((i+1)*5);
		
		//p1.tope = 5;
		//p1.stk[5] = 50;
		
		//for(int i = 0; i<p1.getTamArr(); i++)
		//	System.out.println(p1.pop());
	}

}
